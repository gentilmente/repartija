<div>  
  <h3>
    <p class="izq">Total:  <%= @total %></p>
    <p class="der">Pago individual: <%=@pago_individual%><p>
  </h3>
</div>
<div style="clear: both;"></div>
<p class="izq"> Pusieron: <%= settings.aportes %></p>
<div class="izq"> Saldos:  
  <ul class="izq">
    <% @saldos.each do |m| %>
    <li><%= m.to_s%></li>
    <% end %>  
  </ul>
</div>
<div style="clear: both;"></div>

<ul>
  <li class="izq">
    <p> ACREEDORES:  
      <% settings.acreedores.each do |key, value| %>
      <%= "#{key}: #{value}" + ', '%>
      <% end %>  
    </p>
  </li>
  <li class="izq">
    <p> DEUDORES:  
      <% settings.deudores.each do |key, value| %>
      <%= "#{key}: #{value}" + ', '%>
      <% end %>  
    </p>
  </li>
</ul>
<div style="clear: both;"></div>
<p> Nombre:</p> <p><%= @nombre %></p>